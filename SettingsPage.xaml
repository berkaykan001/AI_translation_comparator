<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AI_Translator_Mobile_App.SettingsPage">
    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <Frame>
                <StackLayout>
                    <Label Text="Target Language 1" FontSize="20" FontAttributes="Bold" />
                    <Picker x:Name="TargetLanguage1Picker" SelectedIndexChanged="OnPickerSelectedIndexChanged" />
                    <Label Text="Target Language 2" FontSize="20" FontAttributes="Bold" />
                    <Picker x:Name="TargetLanguage2Picker" SelectedIndexChanged="OnPickerSelectedIndexChanged" />
                    <Label Text="Target Language 3" FontSize="20" FontAttributes="Bold" />
                    <Picker x:Name="TargetLanguage3Picker" SelectedIndexChanged="OnPickerSelectedIndexChanged" />
                </StackLayout>
            </Frame>

            <Frame>
                <StackLayout>
                    <Label Text="Native Language for AI Explanations" FontSize="20" FontAttributes="Bold" />
                    <Picker x:Name="NativeLanguagePicker" />
                </StackLayout>
            </Frame>

            <Frame>
                <StackLayout>
                    <Label Text="Translation Models" FontSize="20" FontAttributes="Bold" />
                    <Label Text="Model 1" />
                    <Picker x:Name="TranslationModel1Picker" />
                    <Label Text="Model 2" />
                    <Picker x:Name="TranslationModel2Picker" />
                    <Label Text="Model 3" />
                    <Picker x:Name="TranslationModel3Picker" />
                    <Label Text="Model 4" />
                    <Picker x:Name="TranslationModel4Picker" />
                    <Label Text="Model 5" />
                    <Picker x:Name="TranslationModel5Picker" />
                </StackLayout>
            </Frame>

            <Frame>
                <StackLayout>
                    <Label Text="Grammar Check Models" FontSize="20" FontAttributes="Bold" />
                    <Label Text="Model 1" />
                    <Picker x:Name="GrammarModel1Picker" />
                    <Label Text="Model 2" />
                    <Picker x:Name="GrammarModel2Picker" />
                    <Label Text="Model 3" />
                    <Picker x:Name="GrammarModel3Picker" />
                    <Label Text="Model 4" />
                    <Picker x:Name="GrammarModel4Picker" />
                    <Label Text="Model 5" />
                    <Picker x:Name="GrammarModel5Picker" />
                </StackLayout>
            </Frame>

            <Frame>
                <StackLayout>
                    <Label Text="Usage Analysis Models" FontSize="20" FontAttributes="Bold" />
                    <Label Text="Model 1" />
                    <Picker x:Name="UsageModel1Picker" />
                    <Label Text="Model 2" />
                    <Picker x:Name="UsageModel2Picker" />
                    <Label Text="Model 3" />
                    <Picker x:Name="UsageModel3Picker" />
                    <Label Text="Model 4" />
                    <Picker x:Name="UsageModel4Picker" />
                    <Label Text="Model 5" />
                    <Picker x:Name="UsageModel5Picker" />
                </StackLayout>
            </Frame>

            <Frame>
                <StackLayout>
                    <Label Text="Model Management" FontSize="20" FontAttributes="Bold" />

                    <!-- Add New Model Section -->
                    <Frame Padding="15" Margin="0,10,0,10">
                        <StackLayout Spacing="10">
                            <Label Text="Add New Model" FontSize="18" FontAttributes="Bold" />

                            <Label Text="Display Name:" />
                            <Entry x:Name="ModelDisplayNameEntry" Placeholder="e.g., GPT-5 Turbo" />

                            <Label Text="Model Key:" />
                            <Entry x:Name="ModelKeyEntry" Placeholder="e.g., gpt-5-turbo-2025" />

                            <Label Text="Provider:" />
                            <Picker x:Name="ModelProviderPicker" />

                            <Label Text="Input Cost (per 1M tokens):" />
                            <Entry x:Name="ModelInputCostEntry" Placeholder="e.g., 1.25" Keyboard="Numeric" />

                            <Label Text="Output Cost (per 1M tokens):" />
                            <Entry x:Name="ModelOutputCostEntry" Placeholder="e.g., 10.00" Keyboard="Numeric" />

                            <Button Text="Add Model" Clicked="OnAddModelClicked" />
                        </StackLayout>
                    </Frame>

                    <!-- Remove Model Section -->
                    <Frame Padding="15" Margin="0,10,0,0">
                        <StackLayout Spacing="10">
                            <Label Text="Remove Model" FontSize="18" FontAttributes="Bold" />

                            <Label Text="Select Model to Remove:" />
                            <Picker x:Name="RemoveModelPicker" />

                            <Button Text="Remove Selected Model" Clicked="OnRemoveModelClicked" />
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </Frame>


        </StackLayout>
    </ScrollView>
</ContentPage>