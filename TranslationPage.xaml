<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AI_Translator_Mobile_App.TranslationPage"
    BackgroundColor="{StaticResource PageBackgroundColor}">
    <ScrollView>
        <StackLayout>

            <!-- Action selector -->
            <StackLayout Orientation="Horizontal" Spacing="15" VerticalOptions="Center" Margin="20,10,20,0">
                <Label Text="Mode:" VerticalOptions="Center" TextColor="{StaticResource AccentLight}"/>
                <RadioButton
                    x:Name="TranslateRadioButton"
                    Content="Translation"
                    GroupName="ActionGroup"
                    IsChecked="True"
                    CheckedChanged="OnActionChanged" />
                <RadioButton
                    x:Name="GrammarCheckRadioButton"
                    Content="Grammar Check"
                    GroupName="ActionGroup"
                    CheckedChanged="OnActionChanged" />
                <RadioButton
                    x:Name="UsageAnalysisRadioButton"
                    Content="Usage Analysis"
                    GroupName="ActionGroup"
                    CheckedChanged="OnActionChanged" />
            </StackLayout>

            <!-- Target language dropdown -->
            <StackLayout Orientation="Horizontal" Spacing="15" VerticalOptions="Center" Margin="20,0,20,0">
                <Label x:Name="LanguageLabel" Text="Translate to:" VerticalOptions="Center" TextColor="{StaticResource AccentLight}"/>
                <RadioButton x:Name="EnglishRadio" 
                     Content="English" 
                     GroupName="LanguageGroup"
                     CheckedChanged="OnLanguageChanged" />
                <RadioButton x:Name="FrenchRadio" 
                     Content="French" 
                     GroupName="LanguageGroup"
                     IsChecked="True"
                     CheckedChanged="OnLanguageChanged" />
                <RadioButton x:Name="TurkishRadio" 
                     Content="Turkish" 
                     GroupName="LanguageGroup"
                     CheckedChanged="OnLanguageChanged" />
            </StackLayout>

            <!-- User input -->
            <Entry
                x:Name="InputEntry"
                Placeholder="Text to translate"
                Margin="20,10,20,10" />

            <!-- Action button -->
            <Button
                Text="Go"
                x:Name="ProcessButton"
                Clicked="OnProcessClicked"
                Margin="20,10,20,10" />

            <!-- Loading indicator -->
            <ActivityIndicator 
                x:Name="TranslatorLoadingIndicator"
                Color="{StaticResource AccentDark}"
                IsRunning="False"
                IsVisible="False"
                HorizontalOptions="Center"
                Margin="20,10,20,15" />

            <!-- Horizontal scrolling container for outputs -->
            <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Always" Margin="10,10,0,20">
                <StackLayout Orientation="Horizontal" Spacing="15" Padding="20,0,20,0">

                    <!-- Translation Service 1 (DeepL) -->
                    <StackLayout WidthRequest="300" Spacing="10">
                        <Label x:Name="Model1Label" Text="DeepL" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Frame BorderColor="{StaticResource GrayLight}" BackgroundColor="{StaticResource FrameBackgroundColor}" Padding="10">
                            <Editor x:Name="OutputModel1" HeightRequest="{OnPlatform Default=340, Android=600, iOS=600}" IsReadOnly="True" />
                        </Frame>
                        <StackLayout x:Name="FollowUp1Container" IsVisible="False" Spacing="5">
                            <Entry x:Name="FollowUpInput1" Placeholder="Ask follow-up question..." />
                            <Button Text="Send" Clicked="OnFollowUpClicked" CommandParameter="1" />
                        </StackLayout>
                    </StackLayout>

                    <!-- Translation Service 2 (Google) -->
                    <StackLayout WidthRequest="300" Spacing="10">
                        <Label x:Name="Model2Label" Text="Google Translate" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Frame BorderColor="{StaticResource GrayLight}" BackgroundColor="{StaticResource FrameBackgroundColor}" Padding="10">
                            <Editor x:Name="OutputModel2" HeightRequest="{OnPlatform Default=340, Android=600, iOS=600}" IsReadOnly="True" />
                        </Frame>
                        <StackLayout x:Name="FollowUp2Container" IsVisible="False" Spacing="5">
                            <Entry x:Name="FollowUpInput2" Placeholder="Ask follow-up question..." />
                            <Button Text="Send" Clicked="OnFollowUpClicked" CommandParameter="2" />
                        </StackLayout>
                    </StackLayout>

                    <!-- Translation Service 3 (Microsoft) -->
                    <StackLayout WidthRequest="300" Spacing="10">
                        <Label x:Name="Model3Label" Text="Microsoft Translator" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Frame BorderColor="{StaticResource GrayLight}" BackgroundColor="{StaticResource FrameBackgroundColor}" Padding="10">
                            <Editor x:Name="OutputModel3" HeightRequest="{OnPlatform Default=340, Android=600, iOS=600}" IsReadOnly="True" />
                        </Frame>
                        <StackLayout x:Name="FollowUp3Container" IsVisible="False" Spacing="5">
                            <Entry x:Name="FollowUpInput3" Placeholder="Ask follow-up question..." />
                            <Button Text="Send" Clicked="OnFollowUpClicked" CommandParameter="3" />
                        </StackLayout>
                    </StackLayout>

                    <!-- AI Model 1 -->
                    <StackLayout WidthRequest="300" Spacing="10">
                        <Label x:Name="Model4Label" Text="OpenAI GPT-4o" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Frame BorderColor="{StaticResource GrayLight}" BackgroundColor="{StaticResource FrameBackgroundColor}" Padding="10">
                            <Editor x:Name="OutputModel4" HeightRequest="{OnPlatform Default=340, Android=600, iOS=600}" IsReadOnly="True" />
                        </Frame>
                        <StackLayout x:Name="FollowUp4Container" IsVisible="False" Spacing="5">
                            <Entry x:Name="FollowUpInput4" Placeholder="Ask follow-up question..." />
                            <Button Text="Send" Clicked="OnFollowUpClicked" CommandParameter="4" />
                        </StackLayout>
                    </StackLayout>

                    <!-- AI Model 2 -->
                    <StackLayout WidthRequest="300" Spacing="10">
                        <Label x:Name="Model5Label" Text="Mistral AI" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Frame BorderColor="{StaticResource GrayLight}" BackgroundColor="{StaticResource FrameBackgroundColor}" Padding="10">
                            <Editor x:Name="OutputModel5" HeightRequest="{OnPlatform Default=340, Android=600, iOS=600}" IsReadOnly="True" />
                        </Frame>
                        <StackLayout x:Name="FollowUp5Container" IsVisible="False" Spacing="5">
                            <Entry x:Name="FollowUpInput5" Placeholder="Ask follow-up question..." />
                            <Button Text="Send" Clicked="OnFollowUpClicked" CommandParameter="5" />
                        </StackLayout>
                    </StackLayout>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ScrollView>
</ContentPage>
