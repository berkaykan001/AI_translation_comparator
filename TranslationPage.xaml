<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AI_Translator_Mobile_App.TranslationPage"
    BackgroundColor="{StaticResource PageBackgroundColor}">
    <ScrollView>
        <StackLayout
            Padding="20"
            Spacing="15">

            <!-- Mode header -->
            <Label
                Text="Translation Services Comparison"
                FontSize="Large"
                HorizontalOptions="Center"
                TextColor="{StaticResource AccentDark}" FontAttributes="Bold"/>

            <!-- Action selector -->
            <StackLayout Orientation="Horizontal" Spacing="20" VerticalOptions="Center">
                <Label Text="Mode:" VerticalOptions="Center" TextColor="{StaticResource AccentLight}"/>
                <RadioButton
                    x:Name="TranslateRadioButton"
                    Content="Translation"
                    GroupName="ActionGroup"
                    IsChecked="True"
                    CheckedChanged="OnActionChanged" />
                <RadioButton
                    x:Name="GrammarCheckRadioButton"
                    Content="Grammar Check"
                    GroupName="ActionGroup"
                    CheckedChanged="OnActionChanged" />
            </StackLayout>

            <!-- Target language dropdown -->
            <Picker
                x:Name="TargetLanguagePicker"
                Title="Translate to:"
                SelectedItem="French">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>English</x:String>
                        <x:String>French</x:String>
                        <x:String>Turkish</x:String>
                        <x:String>German</x:String>
                        <x:String>Spanish</x:String>
                        <x:String>Portuguese</x:String>
                        <x:String>Dutch</x:String>
                        <x:String>Italian</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <!-- User input -->
            <Entry
                x:Name="InputEntry"
                Placeholder="Enter text" />

            <!-- Action button -->
            <Button
                Text="Go"
                x:Name="ProcessButton"
                Clicked="OnProcessClicked" />

            <!-- Loading indicator -->
            <ActivityIndicator 
                x:Name="TranslatorLoadingIndicator"
                Color="{StaticResource AccentDark}"
                IsRunning="False"
                IsVisible="False"
                HorizontalOptions="Center" />

            <!-- Horizontal scrolling container for outputs -->
            <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Always">
                <StackLayout Orientation="Horizontal" Spacing="15" Padding="10">

                    <!-- Translation Service 1 (DeepL) -->
                    <StackLayout WidthRequest="300" Spacing="10">
                        <Label x:Name="Model1Label" Text="DeepL" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Frame BorderColor="{StaticResource GrayLight}" BackgroundColor="{StaticResource FrameBackgroundColor}" Padding="10">
                            <Editor x:Name="OutputModel1" HeightRequest="200" IsReadOnly="True" />
                        </Frame>
                        <StackLayout x:Name="FollowUp1Container" IsVisible="False">
                            <Entry x:Name="FollowUpInput1" Placeholder="Ask follow-up question..." />
                            <Button Text="Send" Clicked="OnFollowUpClicked" CommandParameter="1" />
                        </StackLayout>
                    </StackLayout>

                    <!-- Translation Service 2 (Google) -->
                    <StackLayout WidthRequest="300" Spacing="10">
                        <Label x:Name="Model2Label" Text="Google Translate" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Frame BorderColor="{StaticResource GrayLight}" BackgroundColor="{StaticResource FrameBackgroundColor}" Padding="10">
                            <Editor x:Name="OutputModel2" HeightRequest="200" IsReadOnly="True" />
                        </Frame>
                        <StackLayout x:Name="FollowUp2Container" IsVisible="False">
                            <Entry x:Name="FollowUpInput2" Placeholder="Ask follow-up question..." />
                            <Button Text="Send" Clicked="OnFollowUpClicked" CommandParameter="2" />
                        </StackLayout>
                    </StackLayout>

                    <!-- Translation Service 3 (Microsoft) -->
                    <StackLayout WidthRequest="300" Spacing="10">
                        <Label x:Name="Model3Label" Text="Microsoft Translator" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Frame BorderColor="{StaticResource GrayLight}" BackgroundColor="{StaticResource FrameBackgroundColor}" Padding="10">
                            <Editor x:Name="OutputModel3" HeightRequest="200" IsReadOnly="True" />
                        </Frame>
                        <StackLayout x:Name="FollowUp3Container" IsVisible="False">
                            <Entry x:Name="FollowUpInput3" Placeholder="Ask follow-up question..." />
                            <Button Text="Send" Clicked="OnFollowUpClicked" CommandParameter="3" />
                        </StackLayout>
                    </StackLayout>

                    <!-- AI Model 1 -->
                    <StackLayout WidthRequest="300" Spacing="10">
                        <Label x:Name="Model4Label" Text="OpenAI GPT-4o" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Frame BorderColor="{StaticResource GrayLight}" BackgroundColor="{StaticResource FrameBackgroundColor}" Padding="10">
                            <Editor x:Name="OutputModel4" HeightRequest="200" IsReadOnly="True" />
                        </Frame>
                        <StackLayout x:Name="FollowUp4Container" IsVisible="False">
                            <Entry x:Name="FollowUpInput4" Placeholder="Ask follow-up question..." />
                            <Button Text="Send" Clicked="OnFollowUpClicked" CommandParameter="4" />
                        </StackLayout>
                    </StackLayout>

                    <!-- AI Model 2 -->
                    <StackLayout WidthRequest="300" Spacing="10">
                        <Label x:Name="Model5Label" Text="Mistral AI" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Frame BorderColor="{StaticResource GrayLight}" BackgroundColor="{StaticResource FrameBackgroundColor}" Padding="10">
                            <Editor x:Name="OutputModel5" HeightRequest="200" IsReadOnly="True" />
                        </Frame>
                        <StackLayout x:Name="FollowUp5Container" IsVisible="False">
                            <Entry x:Name="FollowUpInput5" Placeholder="Ask follow-up question..." />
                            <Button Text="Send" Clicked="OnFollowUpClicked" CommandParameter="5" />
                        </StackLayout>
                    </StackLayout>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ScrollView>
</ContentPage>
