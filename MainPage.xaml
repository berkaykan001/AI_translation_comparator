<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AI_Translator_Mobile_App.MainPage"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    
    >
    <!-- Bu sayfanın içeriği önemli değil. Burda sadece initialize edip TranslationPage ve BaseAIComparisonPage'de override ediyoruz -->
    <ScrollView>
        <StackLayout
            Padding="20"
            Spacing="15">

            <!-- Action selector -->
            <StackLayout Orientation="Horizontal" Spacing="20" VerticalOptions="Center">
                <Label Text="Action:" VerticalOptions="Center" />
                <RadioButton
                    x:Name="TranslateRadioButton"
                    Content="Translation"
                    GroupName="ActionGroup"
                    IsChecked="True"
                    CheckedChanged="OnActionChanged" />
                <RadioButton
                    x:Name="GrammarCheckRadioButton"
                    Content="Grammar Check"
                    GroupName="ActionGroup"
                    CheckedChanged="OnActionChanged" />
            </StackLayout>

            <!-- Target language dropdown -->
            <Picker
                x:Name="TargetLanguagePicker"
                Title="Translate to:"
                SelectedItem="French">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>English</x:String>
                        <x:String>French</x:String>
                        <x:String>Turkish</x:String>
                        <x:String>German</x:String>
                        <x:String>Spanish</x:String>
                        <x:String>Portuguese</x:String>
                        <x:String>Dutch</x:String>
                        <x:String>Italian</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <!-- User input -->
            <Entry
                x:Name="InputEntry"
                Placeholder="Enter text" />

            <!-- Action button -->
            <Button
                Text="Go"
                Clicked="OnTranslateClicked" />

            <!-- Horizontal scrollable results section -->
            <Label Text="AI Model Results:" FontAttributes="Bold" Margin="0,10,0,5"/>

            <!-- Horizontal scrolling container for model outputs -->
            <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Always">
                <StackLayout Orientation="Horizontal" Spacing="15" Padding="10">

                    <!-- AI Model 1 -->
                    <StackLayout WidthRequest="300" Spacing="10">
                        <Label Text="Model 1" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Frame BorderColor="LightGray" Padding="10">
                            <Editor x:Name="OutputModel1" HeightRequest="200" IsReadOnly="True"/>
                        </Frame>
                        <Entry x:Name="FollowUpInput1" Placeholder="Ask follow-up question..." />
                        <Button Text="Send" Clicked="OnFollowUpClicked" CommandParameter="1" />
                    </StackLayout>

                    <!-- AI Model 2 -->
                    <StackLayout WidthRequest="300" Spacing="10">
                        <Label Text="Model 2" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Frame BorderColor="LightGray" Padding="10">
                            <Editor x:Name="OutputModel2" HeightRequest="200" IsReadOnly="True"/>
                        </Frame>
                        <Entry x:Name="FollowUpInput2" Placeholder="Ask follow-up question..." />
                        <Button Text="Send" Clicked="OnFollowUpClicked" CommandParameter="2" />
                    </StackLayout>

                    <!-- AI Model 3 -->
                    <StackLayout WidthRequest="300" Spacing="10">
                        <Label Text="Model 3" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Frame BorderColor="LightGray" Padding="10">
                            <Editor x:Name="OutputModel3" HeightRequest="200" IsReadOnly="True"/>
                        </Frame>
                        <Entry x:Name="FollowUpInput3" Placeholder="Ask follow-up question..." />
                        <Button Text="Send" Clicked="OnFollowUpClicked" CommandParameter="3" />
                    </StackLayout>

                    <!-- AI Model 4 -->
                    <StackLayout WidthRequest="300" Spacing="10">
                        <Label Text="Model 4" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Frame BorderColor="LightGray" Padding="10">
                            <Editor x:Name="OutputModel4" HeightRequest="200" IsReadOnly="True"/>
                        </Frame>
                        <Entry x:Name="FollowUpInput4" Placeholder="Ask follow-up question..." />
                        <Button Text="Send" Clicked="OnFollowUpClicked" CommandParameter="4" />
                    </StackLayout>

                    <!-- AI Model 5 -->
                    <StackLayout WidthRequest="300" Spacing="10">
                        <Label Text="Model 5" FontAttributes="Bold" HorizontalOptions="Center"/>
                        <Frame BorderColor="LightGray" Padding="10">
                            <Editor x:Name="OutputModel5" HeightRequest="200" IsReadOnly="True"/>
                        </Frame>
                        <Entry x:Name="FollowUpInput5" Placeholder="Ask follow-up question..." />
                        <Button Text="Send" Clicked="OnFollowUpClicked" CommandParameter="5" />
                    </StackLayout>

                </StackLayout>
            </ScrollView>

        </StackLayout>
    </ScrollView>
</ContentPage>
